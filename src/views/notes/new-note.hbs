<div class="col-md-4 mx-auto">
  <div class="card text-center notNotes">
    <div class="card-header">
      <h3>Nueva Nota</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
            <input type="text" name="title" required class="form-control" placeholder="Titulo" autofocus/>
        </div>
        <div class="form-group">
            <textarea name="description" required placeholder="descripcion" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>