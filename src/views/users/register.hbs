<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header bg-warning text-center text-white mb-3">
                <h5>Account Register</h5>
            </div>
            <div class="card-body">
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" required placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" required placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="pass" name="pass" required minlength="4" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="passrepeat" name="passrepeat" required minlength="4" placeholder="Confirm Password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                        REGISTER
                        </button>
                    </div>
                    <div class="form-group text-center">
                        <a href="/users/login">
                            <button type="button" class="btn btn-outline-secondary">
                                use organizerIT account
                            </button>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
